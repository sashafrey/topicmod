# This Makefile is combined from two sources
# - Sample Makefile of gtest framework
# - Automatic dependency generation for C++ (http://stackoverflow.com/questions/1500715/gnu-makefile-handling-dependencies)
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

# Points to the root of Google Test, relative to where this file is.
GTEST_DIR = ../3rdparty/gtest

# Defines the compiler
CXX = g++

CPPFLAGS += -I. -I../3rdparty/rpcz/include -I../3rdparty/rpcz/src

# Flags passed to the preprocessor.
# Set Google Test's header directory as a system directory, such that
# the compiler doesn't generate warnings in Google Test headers.
CPPFLAGS += -isystem $(GTEST_DIR)/include

# Flags passed to the C++ compiler.
CXXFLAGS += -g -Wall -pthread -fPIC -std=c++11

# Improved debugging capabilities
# CXXFLAGS += -O0 -fno-inline

# Directory where to put our library
OUT_DIR = bin/

# Linker flags
LDFLAGS += -lboost_filesystem -lboost_system -lboost_thread -lprotobuf -lglog -lrpcz -lzmq -Wl,--no-undefined

# First target - shared library
TARGET_LIB    = $(OUT_DIR)libartm.so
SRCS_LIB      = artm/cpp_interface.cc \
		artm/c_interface.cc \
		artm/messages.pb.cc \
		artm/regularizer_interface.cc \
		artm/core/batch_manager.cc \
		artm/core/data_loader.cc \
		artm/core/generation.cc \
		artm/core/helpers.cc \
		artm/core/instance.cc \
		artm/core/instance_schema.cc \
		artm/core/internals.pb.cc \
		artm/core/internals.rpcz.cc \
		artm/core/master_component.cc \
		artm/core/master_component_service_impl.cc \
		artm/core/master_proxy.cc \
		artm/core/merger.cc \
		artm/core/node_controller.cc \
		artm/core/node_controller_service_impl.cc \
		artm/core/processor.cc \
		artm/core/topic_model.cc \
		artm/regularizer_sandbox/decorrelator_phi.cc \
		artm/regularizer_sandbox/dirichlet_phi.cc \
		artm/regularizer_sandbox/dirichlet_theta.cc \
		artm/regularizer_sandbox/smooth_sparse_phi.cc \
		artm/regularizer_sandbox/smooth_sparse_theta.cc \
		artm/score_sandbox/items_processed.cc \
		artm/score_sandbox/perplexity.cc \
		artm/score_sandbox/sparsity_phi.cc \
		artm/score_sandbox/sparsity_theta.cc \
		artm/score_sandbox/theta_snippet.cc \
		artm/score_sandbox/top_tokens.cc \

OBJS_LIB      = $(SRCS_LIB:.cc=.o)
DEPS_LIB      = $(SRCS_LIB:.cc=.depends)

# Second target - executable (unittests)
TARGET_TEST   = $(OUT_DIR)unittests
SRCS_TEST     = artm_tests/boost_thread_test.cc \
		artm_tests/batch_manager_test.cc \
		artm_tests/rpcz_canary_service.pb.cc \
		artm_tests/rpcz_canary_service.rpcz.cc \
		artm_tests/rpcz_canary_test.cc \
		artm_tests/cpp_interface_test.cc \
		artm_tests/template_manager_test.cc \
		artm_tests/instance_test.cc \
		artm_tests/nodes_connectivity_test.cc \
		artm_tests/test_mother.cc \
		artm_tests/topic_model_test.cc \
		artm_tests/thread_safe_holder_test.cc

OBJS_TEST     = $(SRCS_TEST:.cc=.o)
DEPS_TEST     = $(SRCS_TEST:.cc=.depends)

# All Google Test headers.  Usually you shouldn't change this
# definition.
GTEST_HEADERS = $(GTEST_DIR)/include/gtest/*.h \
                $(GTEST_DIR)/include/gtest/internal/*.h

# Usually you shouldn't tweak such internal variables, indicated by a
# trailing _.
GTEST_SRCS_ = $(GTEST_DIR)/src/*.cc $(GTEST_DIR)/src/*.h $(GTEST_HEADERS)

.PHONY: clean all

all: $(TARGET_LIB) $(TARGET_TEST)

lib: $(TARGET_LIB)

# For simplicity and to avoid depending on Google Test's
# implementation details, the dependencies specified below are
# conservative and not optimized.  This is fine as Google Test
# compiles fast and for ordinary users its source rarely changes.
gtest-all.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest-all.cc

gtest_main.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest_main.cc

# Builds a sample test.  A test should link with either gtest.a or
# gtest_main.a, depending on whether it defines its own main()
# function.
gtest.a : gtest-all.o
	$(AR) $(ARFLAGS) $@ $^

gtest_main.a : gtest-all.o gtest_main.o
	$(AR) $(ARFLAGS) $@ $^

$(TARGET_LIB): $(OBJS_LIB)
	mkdir ../bin/; \
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -shared $^ -o $@ $(LDFLAGS); \

$(TARGET_TEST): $(OBJS_TEST) gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $^ -o $@ -L$(OUT_DIR) -lartm -lprotobuf -lrpcz -lglog $(LDFLAGS); \

.cc.o:
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

%.depends: %.cc
	$(CXX) -M $(CPPFLAGS) $(CXXFLAGS) $< > $@

clean:
	rm -f $(OBJS_LIB) $(DEPS_LIB) $(TARGET_LIB) \
              $(OBJS_TEST) $(DEPS_TEST) $(TARGET_TEST); \
	rm unittests.*

-include $(DEPS_LIB)
-include $(DEPS_TEST)

#ToDo(alfrey): add './protoc.exe --cpp_out=. --rpcz_plugin_out=. ./artm/core/internals.proto'
proto : 
	protoc --cpp_out=. ./artm/messages.proto; \
	protoc --python_out=. ./artm/messages.proto; \

test : $(TARGET_TEST)
	export LD_LIBRARY_PATH=$(LD_LIBRARY_PATH):$$(pwd)/$(OUT_DIR); \
	$(TARGET_TEST); \
